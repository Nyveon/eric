{
  "extends": "astro/tsconfigs/strictest",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
        "@components/*": ["src/components/*"],
        "@layouts/*": ["src/layouts/*"],
        "@pages/*": ["src/pages/*"],
        "@assets/*": ["src/assets/*"],
        "@i18n/*": ["src/i18n/*"],
        "@styles/*": ["src/styles/*"]
    },
    "verbatimModuleSyntax": true,
  }
}
